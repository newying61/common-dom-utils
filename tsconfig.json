{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "lib",
    "src/**/*.test.ts",
    "src/__tests__/**"
  ],
  "include": ["./src", "*.d.ts"]
}
